<mah:MetroWindow x:Class="Pak_Maker.LoadingPakWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 mc:Ignorable="d"
        Title="RapidSails" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#000d2e" WindowStyle="None" AllowsTransparency="True" mah:ControlsHelper.RecognizesAccessKey="False" ShowActivated="False" ShowCloseButton="False" ShowDialogsOverTitleBar="False" ShowIconOnTitleBar="False" ShowMaxRestoreButton="False" ShowMinButton="False" ShowSystemMenu="False" ShowSystemMenuOnRightClick="False" ShowTitleBar="False">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="Exit" Grid.Column="24" Grid.Row="0" Background="Transparent" BorderBrush="Transparent" Foreground="White" Command="{Binding CloseWindowCommand}">
            <Button.Content>
                <Image Source="pack://application:,,,/Icons/close.png"/>
            </Button.Content>
        </Button>
        <Button Name="Minimalize" Grid.Column="23" Grid.Row="0" Background="Transparent" BorderBrush="Transparent" Command="{Binding MinimizeWindowCommand}">
            <Button.Content>
                <Image Source="pack://application:,,,/Icons/minimalize.png"/>
            </Button.Content>
        </Button>
        <Grid Grid.Column="11" Grid.Row="6" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Rectangle Name="Square1" Fill="DarkBlue" Width="10" Height="10" Margin="10,4,66,66"/>
            <Rectangle Name="Square3" Fill="DarkBlue" Width="10" Height="10" Margin="10,32,66,38"/>
            <Rectangle Name="Square2" Fill="DarkBlue" Width="10" Height="10" Margin="38,4,38,66"/>
            <Rectangle Name="Square4" Fill="DarkBlue" Width="10" Height="10" Margin="66,4,10,66"/>
            <Rectangle Name="Square6" Fill="DarkBlue" Width="10" Height="10" Margin="38,32,38,38"/>
            <Rectangle Name="Square7" Fill="DarkBlue" Width="10" Height="10" Margin="66,32,10,38"/>
            <Rectangle Name="Square5" Fill="DarkBlue" Width="10" Height="10" Margin="10,60,66,10"/>
            <Rectangle Name="Square8" Fill="DarkBlue" Width="10" Height="10" Margin="38,60,38,10"/>
            <Rectangle Name="Square9" Fill="DarkBlue" Width="10" Height="10" Margin="66,60,10,10"/>


        </Grid>

        <Label  Grid.Column="10"  Grid.Row="9" Grid.ColumnSpan="5" Grid.RowSpan="3" Content="Downloading Data..." Margin="19,8,0,0" Foreground="#C9969696" FontFamily="Yu Gothic" />
        <Image Grid.Column="11"  Grid.Row="14" Grid.ColumnSpan="3" Grid.RowSpan="1" Source="pack://application:,,,/Icons/madebyzynn.png" RenderTransformOrigin="0.891,0.667" Margin="16,3,16,-3" />

        <Grid.Triggers>
            <EventTrigger RoutedEvent="Window.Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <DoubleAnimation
                            Storyboard.TargetName="Square1"
                            Storyboard.TargetProperty="Width"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True"/>
                        <DoubleAnimation
                            Storyboard.TargetName="Square1"
                            Storyboard.TargetProperty="Height"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True"/>

                        <DoubleAnimation
                            Storyboard.TargetName="Square2"
                            Storyboard.TargetProperty="Width"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.1"/>
                        <DoubleAnimation
                            Storyboard.TargetName="Square2"
                            Storyboard.TargetProperty="Height"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.1"/>

                        <DoubleAnimation
                            Storyboard.TargetName="Square3"
                            Storyboard.TargetProperty="Width"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.2"/>
                        <DoubleAnimation
                            Storyboard.TargetName="Square3"
                            Storyboard.TargetProperty="Height"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.2"/>

                        <DoubleAnimation
                            Storyboard.TargetName="Square4"
                            Storyboard.TargetProperty="Width"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.3"/>
                        <DoubleAnimation
                            Storyboard.TargetName="Square4"
                            Storyboard.TargetProperty="Height"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.3"/>

                        <DoubleAnimation
                            Storyboard.TargetName="Square5"
                            Storyboard.TargetProperty="Width"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.4"/>
                        <DoubleAnimation
                            Storyboard.TargetName="Square5"
                            Storyboard.TargetProperty="Height"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.4"/>

                        <DoubleAnimation
                            Storyboard.TargetName="Square6"
                            Storyboard.TargetProperty="Width"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.5"/>
                        <DoubleAnimation
                            Storyboard.TargetName="Square6"
                            Storyboard.TargetProperty="Height"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.5"/>

                        <DoubleAnimation
                            Storyboard.TargetName="Square7"
                            Storyboard.TargetProperty="Width"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.6"/>
                        <DoubleAnimation
                            Storyboard.TargetName="Square7"
                            Storyboard.TargetProperty="Height"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.6"/>

                        <DoubleAnimation
                            Storyboard.TargetName="Square8"
                            Storyboard.TargetProperty="Width"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.7"/>
                        <DoubleAnimation
                            Storyboard.TargetName="Square8"
                            Storyboard.TargetProperty="Height"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.7"/>

                        <DoubleAnimation
                            Storyboard.TargetName="Square9"
                            Storyboard.TargetProperty="Width"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.8"/>
                        <DoubleAnimation
                            Storyboard.TargetName="Square9"
                            Storyboard.TargetProperty="Height"
                            From="10" To="0" Duration="0:0:0.5" AutoReverse="True" BeginTime="0:0:0.8"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</mah:MetroWindow>
